@using System.Globalization;
@model IEnumerable<HotelAdvisor.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    @foreach (var hotel in Model)
    {
        <div class="row top-buffer">
            <div class="col-md-3">
                <img src="@hotel.Image" alt="Hotel Image" width="200px" height="150px" />
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-3">
                        <h3>@Html.ActionLink(@hotel.Name, "Details", new { id = hotel.Id }) </h3>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-md-3" style="padding-top:20px">
                            <button class="btn btn-default btn-xs" type="button" title="Edit hotel" onclick="location.href='@Url.Action("Edit", "Hotel", new { id=hotel.Id})'">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        </div>
                    }
                </div>
                <div>@hotel.Address @hotel.HouseNumber @hotel.City</div>
                <div>@hotel.Description</div>
            </div>
        </div>
    }
</div>

